@* Modal para Detalle de Cita *@
<div id="modalDetalleCita" class="hidden fixed inset-0 bg-opacity-30 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">

        @* Header del Modal *@
        <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 rounded-t-2xl z-10">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-3">
                    <div id="detalleColorIndicator" class="w-10 h-10 rounded-full"></div>
                    <h2 class="text-2xl font-bold text-gray-800">Detalle de Cita #<span id="detalleCitaId"></span></h2>
                </div>
                <button type="button" onclick="cerrarModalDetalleCita()" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>

        @* Contenido del Modal *@
        <div class="p-6">
            <div class="space-y-6">

                @* Información del Veterinario *@
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-gray-500 mb-3">INFORMACIÓN DEL VETERINARIO</h3>
                    <div class="space-y-2">
                        <div class="flex items-center gap-2">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span class="text-gray-700 font-medium">Dr. <span id="detalleVeterinario"></span></span>
                        </div>
                    </div>
                </div>

                @* Información de la Mascota y Dueño *@
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-gray-500 mb-3">INFORMACIÓN DE LA MASCOTA</h3>
                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Mascota:</span>
                            <span class="text-gray-800 font-medium" id="detalleMascota"></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Dueño:</span>
                            <span class="text-gray-800 font-medium" id="detalleDueno"></span>
                        </div>
                    </div>
                </div>

                @* Información de la Cita *@
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-gray-500 mb-3">DETALLES DE LA CITA</h3>
                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Tipo de Cita:</span>
                            <span class="text-gray-800 font-medium" id="detalleTipoCita"></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Fecha:</span>
                            <span class="text-gray-800 font-medium" id="detalleFecha"></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Hora:</span>
                            <span class="text-gray-800 font-medium" id="detalleHora"></span>
                        </div>
                    </div>
                </div>

                @* Información de Costos *@
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-gray-500 mb-3">COSTOS</h3>
                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Importe Adicional:</span>
                            <span class="text-gray-800 font-medium" id="detalleImporteAdicional"></span>
                        </div>
                        <div class="flex justify-between pt-2 border-t border-gray-300">
                            <span class="text-gray-800 font-semibold">Total:</span>
                            <span class="text-gray-800 font-bold text-lg" id="detalleImporteTotal"></span>
                        </div>
                    </div>
                </div>

                @* Observaciones *@
                <div class="bg-gray-50 rounded-lg p-4">
                    <h3 class="text-sm font-semibold text-gray-500 mb-3">OBSERVACIONES</h3>
                    <p class="text-gray-700" id="detalleObservaciones"></p>
                </div>

            </div>

            @* Botón para cerrar *@
            <div class="mt-6 pt-6 border-t border-gray-200">
                <button type="button" onclick="cerrarModalDetalleCita()"
                        class="w-full px-6 py-3 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors">
                    Cerrar
                </button>
            </div>
        </div>

    </div>
</div>