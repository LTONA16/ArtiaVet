    {
        <div class="space-y-4">
            @foreach (var cita in citasHoy)
            {
                <div class="flex items-center justify-between py-3 hover:bg-gray-50 rounded-lg transition-colors">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 @ObtenerColorCita(cita.TipoCita) rounded-full flex items-center justify-center">
