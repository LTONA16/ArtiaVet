@using ArtiaVet.Models
@{
    var citasHoy = ViewBag.CitasHoy as List<CitaViewModel> ?? new List<CitaViewModel>();
    // Lógica de colores específica para esta vista
    var coloresPorTipo = new Dictionary<string, string>
    {
        { "Limpieza Dental", "bg-green-500" },
        { "Consulta General", "bg-blue-500" },
        { "Vacunación", "bg-purple-600" },
        { "Cirugía", "bg-red-500" },
        { "Control", "bg-yellow-500" },
        { "Emergencia", "bg-orange-500" }
    };
    string ObtenerColorCita(string tipoCita)
    {
        return (!string.IsNullOrEmpty(tipoCita) && coloresPorTipo.ContainsKey(tipoCita))
            ? coloresPorTipo[tipoCita]
            : "bg-cyan-500";
    }
}
