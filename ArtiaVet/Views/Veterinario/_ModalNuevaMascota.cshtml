<!-- Modal para Nueva Mascota (actualizado) -->
<div id="modalNuevaMascota" class="hidden fixed inset-0 bg-opacity-30 backdrop-blur-sm z-[60] flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
    <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 rounded-t-2xl z-10">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-gray-800">Nueva Mascota</h2>
        <button type="button" onclick="cerrarModalMascota()" class="text-gray-400 hover:text-gray-600 transition-colors">✕</button>
      </div>
    </div>

    <form id="formNuevaMascota" class="p-6">
      @Html.AntiForgeryToken()

      <div class="space-y-5">
        <div>
          <label for="NombreMascota" class="block text-sm font-semibold text-gray-700 mb-2">Nombre <span class="text-red-500">*</span></label>
          <input type="text" id="NombreMascota" name="Nombre" required maxlength="50" class="w-full px-4 py-3 border rounded-lg" placeholder="Ej: Max, Luna" />
        </div>

        <div>
          <label for="TipoAnimalID" class="block text-sm font-semibold text-gray-700 mb-2">Tipo de Animal <span class="text-red-500">*</span></label>
          <select id="TipoAnimalID" name="TipoAnimalID" required class="w-full px-4 py-3 border rounded-lg">
            <option value="">Seleccione un tipo de animal</option>
            @if (ViewBag.TiposAnimales != null)
            {
              @foreach (var tipo in ViewBag.TiposAnimales as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
              {
                <option value="@tipo.Value">@tipo.Text</option>
              }
            }
          </select>
        </div>

        <div>
          <label for="DuenoID" class="block text-sm font-semibold text-gray-700 mb-2">Dueño <span class="text-red-500">*</span></label>
          <div class="flex gap-2">
            <select id="DuenoID" name="DuenoID" required class="flex-1 px-4 py-3 border rounded-lg">
              <option value="">Cargando dueños...</option>
            </select>
            <button type="button" onclick="abrirModalDueno()" class="px-4 py-3 bg-gray-100 hover:bg-gray-200 rounded-lg">+</button>
          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="RazaMascota" class="block text-sm font-semibold text-gray-700 mb-2">Raza <span class="text-red-500">*</span></label>
            <input type="text" id="RazaMascota" name="Raza" required maxlength="50" class="w-full px-4 py-3 border rounded-lg" placeholder="Ej: Labrador" />
          </div>
          <div>
            <label for="EdadMascota" class="block text-sm font-semibold text-gray-700 mb-2">Edad (años) <span class="text-red-500">*</span></label>
            <input type="number" id="EdadMascota" name="Edad" required min="0" max="50" class="w-full px-4 py-3 border rounded-lg" placeholder="0" />
          </div>
        </div>

        <div>
          <label for="NotasMascota" class="block text-sm font-semibold text-gray-700 mb-2">Notas</label>
          <textarea id="NotasMascota" name="Notas" rows="3" class="w-full px-4 py-3 border rounded-lg resize-none" placeholder="Información adicional..."></textarea>
        </div>
      </div>

      <div class="flex gap-3 mt-6 pt-6 border-t border-gray-200">
        <button type="button" onclick="cerrarModalMascota()" class="flex-1 px-6 py-3 border rounded-lg">Cancelar</button>
        <button type="button" onclick="guardarMascota()" class="flex-1 px-6 py-3 bg-cyan-600 text-white rounded-lg hover:bg-cyan-700">Guardar Mascota</button>
      </div>
    </form>
  </div>
</div>

<script>
  async function abrirModalMascota() {
    document.getElementById('modalNuevaMascota').classList.remove('hidden');
    ocultarMensajesMascota && ocultarMensajesMascota();
    await cargarDuenosDropdown(); // <-- fuerza recarga desde servidor
  }

  function cerrarModalMascota() {
    document.getElementById('modalNuevaMascota').classList.add('hidden');
    document.getElementById('formNuevaMascota').reset();
    ocultarMensajesMascota && ocultarMensajesMascota();
  }

  async function cargarDuenosDropdown() {
    const selectDueno = document.getElementById('DuenoID');
    selectDueno.innerHTML = '<option value="">Cargando dueños...</option>';

    try {
        const response = await fetch('/Veterinario/ObtenerDuenos', {
            method: 'GET',
            credentials: 'same-origin'
        });

        const result = await response.json();

        selectDueno.innerHTML = '<option value="">Seleccione un dueño</option>';

        result.dueños.forEach(d => {
            const option = document.createElement('option');
            option.value = d.value;
            option.textContent = d.text;
            selectDueno.appendChild(option);
        });

        console.log("Dueños cargados:", result.dueños.length);
    } catch(e) {
        console.error("Error cargando dueños:", e);
        selectDueno.innerHTML = '<option value="">Error cargando dueños</option>';
    }
}


  // guardarMascota() ya existente en tu archivo; asegúrate que use #DuenoID para el dueño seleccionado.
</script>
