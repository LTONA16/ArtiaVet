@{
    ViewData["Title"] = "Veterinario";

    var fechaHoy = DateTime.Today;
    var cultura = new System.Globalization.CultureInfo("es-MX");
}

<div class="flex min-h-screen bg-slate-700">

    @* Sidebar - Menú Lateral *@
    <partial name="_Sidebar"></partial>

    @* Contenedor principal con borde verde y fondo blanco *@
    <div class="flex-1 m-6 bg-white rounded-3xl overflow-hidden flex flex-col">

        @* Encabezado (Opcional, pero recomendado para mostrar fecha y contexto) *@
        <div class="px-8 pt-8 pb-4">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Panel Médico</h1>
            <p class="text-gray-400 text-sm">@fechaHoy.ToString("dddd, dd 'de' MMMM yyyy", cultura)</p>
        </div>

        @* Contenido interior con padding *@
        <div class="p-8 h-full w-full overflow-y-auto">

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 h-full">

                @* Columna izquierda - Citas Próximas (2/3 del ancho) *@
                <div class="lg:col-span-2 h-full">
                    <partial name="_CitasProximas"></partial>
                </div>

                @* Columna derecha - Recordatorios y Stock (1/3 del ancho) *@
                <div class="lg:col-span-1 space-y-6">
                    <partial name="_Recordatorios"></partial>
                    <partial name="_GraficasStock"></partial>
                </div>

            </div>

        </div>

    </div>

</div>