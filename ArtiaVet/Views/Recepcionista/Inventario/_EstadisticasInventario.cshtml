@using ArtiaVet.Models

<div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Estadísticas</h2>

    @{
        var inventario = ViewBag.Inventario as List<InventarioViewModel>;
        var totalItems = inventario?.Count ?? 0;
        var valorTotal = inventario?.Sum(i => i.ValorTotal) ?? 0;
        var stockBajo = inventario?.Count(i => i.StockBajo) ?? 0;
        var stockCritico = inventario?.Count(i => i.StockCritico) ?? 0;
    }

    <div class="space-y-4">
        @* Total de Items *@
        <div class="bg-gradient-to-r from-cyan-50 to-cyan-100 p-4 rounded-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 font-medium">Total Items</p>
                    <p class="text-3xl font-bold text-gray-800 mt-1">@totalItems</p>
                </div>
                <div class="w-12 h-12 bg-cyan-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                    </svg>
                </div>
            </div>
        </div>

        @* Valor Total *@
        <div class="bg-gradient-to-r from-green-50 to-green-100 p-4 rounded-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 font-medium">Valor Total</p>
                    <p class="text-3xl font-bold text-gray-800 mt-1">$@valorTotal.ToString("N2")</p>
                </div>
                <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        @* Stock Bajo *@
        <div class="bg-gradient-to-r from-yellow-50 to-yellow-100 p-4 rounded-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 font-medium">Stock Bajo</p>
                    <p class="text-3xl font-bold text-gray-800 mt-1">@stockBajo</p>
                </div>
                <div class="w-12 h-12 bg-yellow-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
            </div>
        </div>

        @* Stock Crítico *@
        <div class="bg-gradient-to-r from-red-50 to-red-100 p-4 rounded-lg">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-600 font-medium">Stock Crítico</p>
                    <p class="text-3xl font-bold text-gray-800 mt-1">@stockCritico</p>
                </div>
                <div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>
</div>