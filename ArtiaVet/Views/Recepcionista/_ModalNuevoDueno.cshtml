@* Modal para Nuevo Dueño *@
<div id="modalNuevoDueno" class="hidden fixed inset-0 bg-opacity-30 backdrop-blur-sm z-[70] flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl shadow-2xl max-w-lg w-full">

        @* Header del Modal *@
        <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 rounded-t-2xl">
            <div class="flex justify-between items-center">
                <h2 class="text-2xl font-bold text-gray-800">Nuevo Dueño</h2>
                <button type="button" onclick="cerrarModalDueno()" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>

        @* Formulario *@
        <form id="formNuevoDueno" class="p-6">
            @Html.AntiForgeryToken()

            <div class="space-y-5">

                @* Nombre *@
                <div>
                    <label for="NombreDueno" class="block text-sm font-semibold text-gray-700 mb-2">
                        Nombre Completo <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="NombreDueno" name="Nombre" required maxlength="200"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
                           placeholder="Ej: Juan Pérez García" />
                </div>

                @* Email *@
                <div>
                    <label for="EmailDueno" class="block text-sm font-semibold text-gray-700 mb-2">
                        Correo Electrónico <span class="text-red-500">*</span>
                    </label>
                    <input type="email" id="EmailDueno" name="Email" required maxlength="200"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
                           placeholder="ejemplo@correo.com" />
                </div>

                @* Número de Teléfono *@
                <div>
                    <label for="NumeroTelefonoDueno" class="block text-sm font-semibold text-gray-700 mb-2">
                        Número de Teléfono <span class="text-red-500">*</span>
                    </label>
                    <input type="tel" id="NumeroTelefonoDueno" name="NumeroTelefono" required 
                           pattern="[0-9]{10}" maxlength="10"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all"
                           placeholder="6621234567" />
                    <p class="text-xs text-gray-500 mt-1">Ingrese 10 dígitos sin espacios ni guiones</p>
                </div>

            </div>

            @* Botones *@
            <div class="flex gap-3 mt-6 pt-6 border-t border-gray-200">
                <button type="button" onclick="cerrarModalDueno()"
                        class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors">
                    Cancelar
                </button>
                <button type="button" onclick="guardarDueno()"
                        class="flex-1 px-6 py-3 bg-cyan-600 text-white font-medium rounded-lg hover:bg-cyan-700 transition-colors">
                    Guardar Dueño
                </button>
            </div>
        </form>

    </div>
</div>

<script>
    function abrirModalDueno() {
        document.getElementById('modalNuevoDueno').classList.remove('hidden');
    }

    function cerrarModalDueno() {
        document.getElementById('modalNuevoDueno').classList.add('hidden');
        document.getElementById('formNuevoDueno').reset();
    }

    function guardarDueno() {
        const form = document.getElementById('formNuevoDueno');
        
        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        const nombre = document.getElementById('NombreDueno').value;
        const email = document.getElementById('EmailDueno').value;
        const numeroTelefono = document.getElementById('NumeroTelefonoDueno').value;

        if (!nombre || !email || !numeroTelefono) {
            alert('Por favor complete todos los campos requeridos');
            return;
        }

        const data = {
            Nombre: nombre,
            Email: email,
            NumeroTelefono: numeroTelefono
        };

        console.log('Datos a enviar:', data);

        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('/Recepcionista/CrearDueno', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': token
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            if (result.success) {
                const selectDueno = document.getElementById('DuenoID');
                selectDueno.innerHTML = '<option value="">Seleccione un dueño</option>';
                
                result.dueños.forEach(dueño => {
                    const option = document.createElement('option');
                    option.value = dueño.value;
                    option.textContent = dueño.text;
                    selectDueno.appendChild(option);
                });

                selectDueno.value = result.dueñoId;

                cerrarModalDueno();
                alert('Dueño creado exitosamente');
            } else {
                alert(result.mensaje || 'Error al crear el dueño');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error al crear el dueño');
        });
    }
</script>