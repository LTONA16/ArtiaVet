<div id="modalEditarRecordatorio" class="hidden fixed inset-0 bg-opacity-30 backdrop-blur-sm flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl p-8 max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Editar Recordatorio</h2>
            <button onclick="cerrarModalEditarRecordatorio()" class="text-gray-400 hover:text-gray-600">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <form asp-controller="Recepcionista" asp-action="EditarRecordatorio" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" id="editarRecordatorioId" />

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Cita *</label>
                    <select name="CitaID" id="editarCitaID" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Seleccione una cita</option>
                        @foreach (var cita in ViewBag.Citas)
                        {
                            <option value="@cita.Value">@cita.Text</option>
                        }
                    </select>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Fecha y Hora del Recordatorio *</label>
                    <input type="datetime-local" name="FechaRecordatorio" id="editarFechaRecordatorio" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Asunto *</label>
                    <input type="text" name="Asunto" id="editarAsunto" maxlength="200" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="Ej: Recordatorio de vacunaciÃ³n" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Mensaje *</label>
                    <textarea name="Mensaje" id="editarMensaje" maxlength="500" rows="4" required
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                              placeholder="Escriba el mensaje del recordatorio..."></textarea>
                </div>
            </div>

            <div class="flex gap-3 mt-6">
                <button type="submit"
                        class="flex-1 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                    Guardar Cambios
                </button>
                <button type="button" onclick="cerrarModalEditarRecordatorio()"
                        class="flex-1 px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors font-medium">
                    Cancelar
                </button>
            </div>
        </form>
    </div>
</div>